generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id         Int     @id @default(autoincrement())
  identifier String  @unique
  password   String
  username   String?

  projects project[] @relation("user_to_projects")
  asset    asset[]   @relation("user_to_assets")

  @@map("user")
}

// public string name;
// public string author;
// public string description;
// public bool isPublic;

model project {
  id          String   @id
  data        Json
  name        String?
  author      String?
  description String?
  isPublic    Boolean?

  users  user[]  @relation("user_to_projects")
  assets asset[] @relation("project_to_assets")

  @@map("project")
}

model asset {
  id        String @id
  extension String
  fileName  String @map("file_name")
  url       String

  users    user[]    @relation("user_to_assets")
  projects project[] @relation("project_to_assets")

  @@map("asset")
}
